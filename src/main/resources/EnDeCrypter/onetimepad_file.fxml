<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<GridPane alignment="TOP_CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="EnDeCrypter.Controller">
    <padding>
        <Insets bottom="10" left="25" right="25" top="10" />
    </padding>

    <Label text="One-Time-Pad (with file input)" GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <font>
            <Font name="System Bold" size="16.0" />
        </font></Label>

    <Button onAction="#fileChooserEncryption" text="File Encryption"
            GridPane.halignment="CENTER"
            GridPane.columnIndex="0"  GridPane.rowIndex="1"
    />

    <Button onAction="#fileChooserDecryption" text="File Decryption"
            GridPane.halignment="CENTER"
            GridPane.columnIndex="1"  GridPane.rowIndex="1"
    />

    <Label fx:id="textA" wrapText="true"
           GridPane.halignment="CENTER"
           GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <Label fx:id="textB" wrapText="true"
           GridPane.halignment="CENTER"
           GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <TextArea fx:id="textAreaA" editable="false" wrapText="true"
              GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <TextArea fx:id="textAreaB" editable="false" wrapText="true"
              GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Button onAction="#home" text="Home" fx:id="home" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
</GridPane>
