<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="EnDeCrypter.Controller">
    <padding>
        <Insets bottom="10" left="25" right="25" top="5" />
    </padding>
    <Label text="One-Time-Pad" GridPane.columnSpan="2" GridPane.halignment="CENTER">
      <font>
         <Font name="System Bold" size="16.0" />
      </font></Label>
    <Label text="Plaintext :" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
    <TextArea fx:id="plaintext" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Button onAction="#stringEncryptionAction" text="Encrypt !" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
    <Label text="Ciphertext :" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
    <TextArea fx:id="ciphertext" editable="false" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Button onAction="#stringDecryptionAction" text="Decrypt !" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
    <Button onAction="#home" fx:id="home" text="Home" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
</GridPane>
